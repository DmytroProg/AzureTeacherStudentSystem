@page
@model AzureTeacherStudentSystem.Pages.EditLessonModel

@{
    ViewData["Title"] = "EditLesson";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>EditLesson</h1>

<h4>Lesson</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Lesson.Id" />
            <div class="form-group">
                <label asp-for="Lesson.Topic" class="control-label"></label>
                <input asp-for="Lesson.Topic" class="form-control" />
                <span asp-validation-for="Lesson.Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.Homework" class="control-label"></label>
                <input asp-for="Lesson.Homework" class="form-control" type="file" name="file"/>
                <span asp-validation-for="Lesson.Homework" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
